# JETHRO 9.0 - Environment Configuration
# =======================================
# Copy this file to .env and fill in your values
#
# Required for production:
#   - DATABASE_URL
#   - REDIS_URL
#
# Optional but recommended:
#   - LLM_MODE + corresponding API key

# =============================================================================
# DATABASE
# =============================================================================

# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://jethro:password@localhost:5432/jethro9

# For local development without PostgreSQL, use SQLite:
# DATABASE_URL=sqlite:///./dev.db

# =============================================================================
# REDIS (Job Queue)
# =============================================================================

# Redis connection string
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# STORAGE
# =============================================================================

# Storage backend: local | s3
STORAGE_BACKEND=local

# Local storage path (when STORAGE_BACKEND=local)
STORAGE_PATH=./storage

# S3 configuration (when STORAGE_BACKEND=s3)
# S3_BUCKET=your-bucket-name
# S3_ENDPOINT=https://s3.amazonaws.com
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key
# S3_REGION=us-east-1

# =============================================================================
# LLM INTEGRATION (Optional)
# =============================================================================

# LLM mode: none | openrouter | deepseek | gemini
# Set to 'none' for rule-based detection only (no API costs)
LLM_MODE=none

# OpenRouter API (recommended - access to multiple models)
# Get key at: https://openrouter.ai/keys
# OPENROUTER_API_KEY=sk-or-v1-...

# DeepSeek API (alternative)
# DEEPSEEK_API_KEY=sk-...

# Google Gemini API (alternative)
# GEMINI_API_KEY=...

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================

# Server port
PORT=8000

# Service role: web | worker
# web = FastAPI server
# worker = RQ background worker
BACKEND_LITE_ROLE=web

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# Enable SQL query logging (debug)
# SQL_ECHO=true

# Database connection timeout (seconds)
# DB_CONNECT_TIMEOUT=5

# ZIP upload limits
# MAX_ZIP_FILES=500
# MAX_FILE_BYTES=26214400
# MAX_TOTAL_UNCOMPRESSED_BYTES=524288000
# MAX_COMPRESSION_RATIO=100
